<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" app:cardBackgroundColor="#E6E2E2" app:cardCornerRadius="20dp" app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="10dp">

        <TextView
            android:id="@+id/LblDe" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Señor X" android:textSize="20sp" android:textStyle="bold" />

        <TextView
            android:id="@+id/LblAsunto" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Información importante" android:textSize="12sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
